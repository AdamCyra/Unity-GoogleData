using UnityEngine;
using System;
using System.Collections;
using System.Collections.Generic;

public class LanguagePack : BaseDatabase 
{
	public LanguageData[] dataArray = new LanguageData[0];
	
	void OnEnable()
	{
#if UNITY_EDITOR
		//hideFlags = HideFlags.DontSave;
#endif
	}
	
	public LanguageData FindByKey(string key)
	{
		return Array.Find(dataArray, d => d.Key == key);
	}
}


[System.Serializable]
public class LanguageData
{
	[ExposeProperty]
	public string Key				{ get; set; }
	
	[ExposeProperty]
	public string Text	{ get; set; }
	
}